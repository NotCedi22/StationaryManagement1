@{
    ViewData["Title"] = "Login";
}

<div class="login-container">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-box-arrow-in-right me-2"></i>Login
        </h2>
        <p class="text-muted">Sign in to access HMT Stationery Management</p>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
        </div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
        </div>
    }

    <form asp-action="Login" method="post">
        <div class="mb-3">
            <label class="form-label fw-semibold">
                <i class="bi bi-envelope me-1"></i>Email
            </label>
            <input name="email" type="email" class="form-control" placeholder="Enter your email" required />
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Password</label>
            <input name="password" type="password" class="form-control" placeholder="Enter your password" required />
        </div>

        <div class="form-check mb-4">
            <input class="form-check-input" type="checkbox" name="rememberMe" id="rememberMe" />
            <label class="form-check-label" for="rememberMe">
                Remember Me
            </label>
            <div class="form-text">Keep me signed in on this device (uses browser cookies).</div>
        </div>

        <button type="submit" class="btn btn-primary w-100 py-2">
            <i class="bi bi-box-arrow-in-right me-2"></i>Login
        </button>
    </form>

    <div class="text-center mt-4">
        <hr class="my-4">
        <p class="text-muted mb-3">Need an account?</p>
        <small class="text-muted d-block">
            <i class="bi bi-info-circle me-1"></i>Contact your administrator to create an account
        </small>
    </div>
</div>

<style>
    .register-link-btn {
        border: 2px solid #667eea;
        color: #667eea;
        font-weight: 600;
        transition: all 0.3s ease;
        background: transparent;
    }

    .register-link-btn:hover {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-color: #667eea;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
    }

    .register-link-btn:active {
        transform: translateY(0);
    }
</style>
