@using Microsoft.AspNetCore.Http
@using StationaryManagement1.Data
@inject AppDBContext Db

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StationaryManagement</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <a class="navbar-brand" asp-controller="Home" asp-action="Index">StationeryManagement</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMenu"
                        aria-controls="navbarMenu" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between" id="navbarMenu">

                    @* LEFT MENU *@
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item"><a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a></li>

                        @{
                            var empId = Context.Session.GetInt32("EmployeeId");
                            var empRoleId = Context.Session.GetInt32("RoleId");
                        }

                        @if (empId != null)
                        {
                            @* Employees: Admin + Manager *@
                            @if (empRoleId == 1 || empRoleId == 2)
                            {
                                <li class="nav-item"><a class="nav-link text-dark" asp-controller="Employees" asp-action="Index">Employees</a></li>
                            }

                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="StationeryItems" asp-action="Index">Stationery Items</a></li>

                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="StationeryRequests" asp-action="Index">Requests</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Help" asp-action="Index">Help</a></li>

                            @* Reports: Admin + Manager *@
                            @if (empRoleId == 1 || empRoleId == 2)
                            {
                                <li class="nav-item"><a class="nav-link text-dark" asp-controller="Reports" asp-action="Index">Reports</a></li>
                            }

                            @* 🔥 NEW: All logged users can see Roles *@
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Roles" asp-action="Index">Roles</a></li>
                        }
                    </ul>

                    @* RIGHT: User info + notifications *@
                    <ul class="navbar-nav">
                        @{
                            var empName = Context.Session.GetString("EmployeeName") ?? "User";
                            var empIdRight = Context.Session.GetInt32("EmployeeId");
                            var unreadCount = 0;
                            var latestNotifications = new List<StationaryManagement1.Models.Notification>();

                            if (empIdRight != null && Db != null)
                            {
                                latestNotifications = Db.Notifications
                                    .Where(n => n.EmployeeId == empIdRight.Value)
                                    .OrderByDescending(n => n.CreatedAt)
                                    .Take(5)
                                    .ToList();

                                unreadCount = latestNotifications.Count(n => !n.IsRead);
                            }
                        }

                        @if (empIdRight == null)
                        {
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Login</a></li>
                        }
                        else
                        {
                            <li class="nav-item dropdown me-2">
                                <a class="nav-link dropdown-toggle position-relative" href="#" id="notifDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <img src="~/images/bell.png" alt="Notifications" style="width:20px;height:20px;">
                                    @if (unreadCount > 0)
                                    {
                                        <span class="position-absolute top-0 start-100 translate-middle p-1 bg-danger border border-light rounded-circle"></span>
                                    }
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="notifDropdown" style="min-width:280px;">
                                    <li class="dropdown-header d-flex justify-content-between align-items-center">
                                        <span>Notifications</span>
                                        <a class="small" asp-controller="Notifications" asp-action="Index">Open dashboard</a>
                                    </li>
                                    @if (!latestNotifications.Any())
                                    {
                                        <li><span class="dropdown-item-text text-muted">No notifications yet.</span></li>
                                    }
                                    else
                                    {
                                        @foreach (var n in latestNotifications)
                                        {
                                            <li>
                                                <a class="dropdown-item d-flex flex-column" href="@Url.Action("Go", "Notifications", new { id = n.NotificationId })">
                                                    <span class="fw-semibold @(n.IsRead ? "" : "text-primary")">@n.Message</span>
                                                    <small class="text-muted">@n.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</small>
                                                </a>
                                            </li>
                                        }
                                    }
                                    <li><hr class="dropdown-divider" /></li>
                                    <li><a class="dropdown-item" asp-controller="Notifications" asp-action="Index">View all</a></li>
                                </ul>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="accountDropdown"
                                   role="button" data-bs-toggle="dropdown" aria-expanded="false">@empName</a>

                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="accountDropdown">
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="ChangePassword">Change Password</a></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - StationeryManagement -
            <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>¶
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
