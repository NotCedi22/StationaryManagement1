@using Microsoft.AspNetCore.Http
@using StationaryManagement1.Data
@inject AppDBContext Db

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StationaryManagement</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        /* ----- HEADER STYLE ----- */
        .navbar-custom {
            background: linear-gradient(to right, #0d6efd, #0b5ed7);
            padding: 0.75rem 1rem;
        }

        .navbar-brand img {
            border-radius: 6px;
        }

        .navbar-brand {
            font-size: 1.35rem;
            letter-spacing: 0.3px;
            display: flex;
            align-items: center;
            font-weight: 700;
        }

        .nav-link {
            font-weight: 500;
            transition: 0.25s ease-in-out;
        }

        .nav-link:hover {
            color: #d9e7ff !important;
            transform: translateY(-1px);
        }

        .dropdown-menu {
            border-radius: 8px;
        }

        .navbar-shadow {
            box-shadow: 0 2px 6px rgba(0,0,0,0.15);
        }

        /* ----- FOOTER STYLE ----- */
        footer {
            background: #f8f9fa;
            border-top: 2px solid #e5e5e5;
        }

        footer .footer-text {
            font-size: 0.95rem;
            color: #6c757d;
        }

        footer a {
            color: #0d6efd;
            text-decoration: none;
        }

        footer a:hover {
            text-decoration: underline;
        }
    </style>

</head>

<body>

    <header class="navbar-shadow">
        <nav class="navbar navbar-expand-lg navbar-dark navbar-custom">
            <div class="container-fluid">

                <!-- LOGO / BRAND -->
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    @if (System.IO.File.Exists(System.IO.Path.Combine(Directory.GetCurrentDirectory(), "wwwroot/images/chip.png")))
                    {
                        <img src="~/images/chip.png" alt="HMT Logo" width="34" class="me-2">
                    }
                    HMT Stationery Management
                </a>

                <!-- MOBILE TOGGLER -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarMain">

                    <!-- LEFT MENU -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door me-1"></i> Home
                            </a>
                        </li>

                        @{
                            var empId = Context.Session.GetInt32("EmployeeId");
                            var empRoleId = Context.Session.GetInt32("RoleId");
                        }

                        @if (empId != null)
                        {
                            if (empRoleId is 1 or 2)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Employees" asp-action="Index">
                                        <i class="bi bi-people me-1"></i> Employees
                                    </a>
                                </li>
                            }

                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="StationeryItems" asp-action="Index">
                                    <i class="bi bi-box-seam me-1"></i> Items
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="StationeryRequests" asp-action="Index">
                                    <i class="bi bi-list-check me-1"></i> Requests
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Help" asp-action="Index">
                                    <i class="bi bi-question-circle me-1"></i> Help
                                </a>
                            </li>

                            if (empRoleId is 1 or 2)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Reports" asp-action="Index">
                                        <i class="bi bi-bar-chart me-1"></i> Reports
                                    </a>
                                </li>
                            }

                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Roles" asp-action="Index">
                                    <i class="bi bi-diagram-3 me-1"></i> Roles
                                </a>
                            </li>
                        }
                    </ul>

                    <!-- RIGHT MENU -->
                    <ul class="navbar-nav ms-auto">

                        @{
                            var empName = Context.Session.GetString("EmployeeName") ?? "User";
                            var empIdRight = Context.Session.GetInt32("EmployeeId");
                            var unreadCount = 0;
                            var latestNotifications = new List<StationaryManagement1.Models.Notification>();

                            if (empIdRight != null && Db != null)
                            {
                                latestNotifications = Db.Notifications
                                .Where(n => n.EmployeeId == empIdRight.Value)
                                .OrderByDescending(n => n.CreatedAt)
                                .Take(5)
                                .ToList();

                                unreadCount = latestNotifications.Count(n => !n.IsRead);
                            }
                        }

                        @if (empIdRight == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i> Login
                                </a>
                            </li>
                        }
                        else
                        {
                            @if (empRoleId == 1)
                            {
                                <!-- Admin-only Register link -->
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Account" asp-action="Register">
                                        <i class="bi bi-person-plus me-1"></i> Register
                                    </a>
                                </li>
                            }
                            
                            <!-- Notifications -->
                            <li class="nav-item dropdown me-3">
                                <a class="nav-link position-relative text-white" href="#" role="button"
                                   data-bs-toggle="dropdown">
                                    <i class="bi bi-bell fs-5"></i>

                                    @if (unreadCount > 0)
                                    {
                                        <span class="position-absolute top-0 start-100 translate-middle
                                         badge rounded-pill bg-danger">
                                            @unreadCount
                                        </span>
                                    }
                                </a>

                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li class="dropdown-header fw-bold">Notifications</li>

                                    @if (!latestNotifications.Any())
                                    {
                                        <li><span class="dropdown-item text-muted">No notifications</span></li>
                                    }
                                    else
                                    {
                                        @foreach (var n in latestNotifications)
                                        {
                                            <li>
                                                <a class="dropdown-item" href="@Url.Action("Go", "Notifications", new { id = n.NotificationId })">
                                                    <span class="fw-semibold @(n.IsRead ? "" : "text-primary")">@n.Message</span>
                                                    <br />
                                                    <small class="text-muted">@n.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</small>
                                                </a>
                                            </li>
                                        }
                                    }

                                    <li><hr /></li>
                                    <li><a class="dropdown-item" asp-controller="Notifications" asp-action="Index">View all</a></li>
                                </ul>
                            </li>

                            <!-- User Profile -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle me-1"></i> @empName
                                </a>

                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="ChangePassword">Change Password</a></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a></li>
                                </ul>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="py-3 mt-4">
        <div class="container text-center footer-text">
            © 2025 HMT Technologies — Stationery Management |
            <a asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
