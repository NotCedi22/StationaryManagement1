@model IEnumerable<StationaryManagement1.Models.Employee>
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Employees";
    var roleId = Context.Session.GetInt32("RoleId");
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">
        <i class="bi bi-people me-2 text-primary"></i>Employees
    </h2>
    <div>
        @if (roleId == 1)
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-person-plus me-2"></i>Create New Employee
            </a>
        }
    </div>
</div>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.Name</td>
                <td>@emp.Email</td>
                <td>@emp.Role?.RoleName</td>
                <td>
                    @if (emp.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactive</span>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@emp.EmployeeId" class="btn btn-info btn-sm">Details</a>
                    @if (roleId == 1)
                    {
                        <a asp-action="Edit" asp-route-id="@emp.EmployeeId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@emp.EmployeeId" class="btn btn-danger btn-sm">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
