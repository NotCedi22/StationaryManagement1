@model IEnumerable<StationaryManagement1.Models.Notification>

@{
    ViewData["Title"] = "Notifications";
}

<div class="d-flex align-items-center mb-3">
    <img src="~/images/bell.png" alt="Notifications" style="width:26px;height:26px;" class="me-2" />
    <h2 class="mb-0">Notifications</h2>
</div>

<div class="card shadow-sm">
    <div class="table-responsive">
        <table class="table align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Recipient</th>
                    <th>Superior</th>
                    <th>Message</th>
                    <th>Request</th>
                    <th>Status</th>
                    <th>Created</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted py-4">No notifications.</td>
                    </tr>
                }
                else
                {
                    foreach (var notification in Model)
                    {
                        var request = notification.RelatedRequest;
                        var superiorName = request?.Superior?.Name ?? "—";
                        <tr>
                            <td>@notification.Employee?.Name</td>
                            <td>@superiorName</td>
                            <td class="fw-semibold">@notification.Message</td>
                            <td>
                                @if (notification.RelatedRequestId.HasValue)
                                {
                                    <a asp-controller="StationeryRequests" asp-action="Details" asp-route-id="@notification.RelatedRequestId.Value">
                                        Request #@notification.RelatedRequestId.Value
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </td>
                            <td>
                                @if (notification.IsRead)
                                {
                                    <span class="badge bg-success">Read</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Unread</span>
                                }
                            </td>
                            <td>@notification.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
