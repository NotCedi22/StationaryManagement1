@{
    ViewData["Title"] = "Hash Passwords";
}

<h2>Hash Passwords</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}

<form asp-action="HashPasswordsConfirmed" method="post">
    <p>
        This will hash all users' passwords with their default known passwords.
    </p>
    <button type="submit" class="btn btn-primary">Hash Passwords Now</button>
</form>
