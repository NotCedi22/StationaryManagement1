@model IEnumerable<StationaryManagement1.Models.StationeryRequest>

@{
    ViewData["Title"] = "Stationery Requests";

    var currentUserId = (int?)ViewData["CurrentUserId"];
    var currentUserRole = (string?)ViewData["CurrentUserRole"];
}

<h1>Stationery Requests</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Request</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Employee</th>
            <th>Superior</th>
            <th>Status</th>
            <th>Total Cost</th>
            <th>Request Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.RequestId</td>
                <td>@item.Employee?.Name</td>
                <td>@item.Superior?.Name</td>
                <td>@item.Status</td>
                <td>@item.TotalCost.ToString("C")</td>
                <td>@item.RequestDate.ToLocalTime().ToString("g")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.RequestId" class="btn btn-sm btn-info">Details</a>

                    @* Admin/Manager actions *@
                    @if (currentUserRole == "Admin" || currentUserRole == "Manager")
                    {
                        <a asp-action="Edit" asp-route-id="@item.RequestId" class="btn btn-sm btn-warning">Edit</a>
                        <form asp-action="Delete" asp-route-id="@item.RequestId" method="post" style="display:inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>

                        @if (item.Status == "Pending")
                        {
                            <form asp-action="Approve" asp-route-id="@item.RequestId" method="post" style="display:inline">
                                <button type="submit" class="btn btn-sm btn-success">Approve</button>
                            </form>
                            <form asp-action="Reject" asp-route-id="@item.RequestId" method="post" style="display:inline">
                                <button type="submit" class="btn btn-sm btn-secondary">Reject</button>
                            </form>
                        }
                    }

                    @* Employee withdraw action for pending *@
                    @if (currentUserRole == "Employee" && item.EmployeeId == currentUserId && item.Status == "Pending")
                    {
                        <form asp-action="Withdraw" asp-route-id="@item.RequestId" method="post" style="display:inline">
                            <button type="submit" class="btn btn-sm btn-outline-danger">Withdraw</button>
                        </form>
                    }

                    @* Employee cancel request for approved *@
                    @if (currentUserRole == "Employee" && item.EmployeeId == currentUserId && item.Status == "Approved")
                    {
                        <form asp-action="RequestCancel" asp-route-id="@item.RequestId" method="post" style="display:inline">
                            <button type="submit" class="btn btn-sm btn-outline-danger">Request Cancel</button>
                        </form>
                    }

                    @* Superior/Manager/Admin approve cancel when pending *@
                    @if (item.Status == "CancelPending" &&
                        ((currentUserRole == "Admin" || currentUserRole == "Manager") || item.SuperiorId == currentUserId))
                    {
                        <form asp-action="ApproveCancel" asp-route-id="@item.RequestId" method="post" style="display:inline">
                            <button type="submit" class="btn btn-sm btn-success">Approve Cancel</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
