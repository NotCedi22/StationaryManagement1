@model StationaryManagement1.Models.Role

@{
    ViewData["Title"] = "Edit Role";
}

<h1 class="mb-3">Edit Role</h1>

<div class="card p-4 shadow-sm">
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="RoleId" />

        <div class="mb-3">
            <label asp-for="RoleName" class="form-label"></label>
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Eligibility Limit (QR)</label>
            <input asp-for="RoleThreshold.MaxAmount" class="form-control" type="number" step="0.01" min="0" />
            <span asp-validation-for="RoleThreshold.MaxAmount" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="CanApprove" class="form-check-input" type="checkbox" />
            <label asp-for="CanApprove" class="form-check-label">Can Approve Requests</label>
        </div>

        <button type="submit" class="btn btn-success">💾 Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">⬅ Back</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
