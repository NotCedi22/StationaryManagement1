@model IEnumerable<StationaryManagement1.Models.Role>
@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "Roles / Eligibility";
    var roleId = Context.Session.GetInt32("RoleId");
}

<h1 class="mb-3">Roles & Eligibility</h1>

@if (roleId == 1)
{
    <p>
        <a class="btn btn-primary" asp-action="Create">➕ Create New Role</a>
    </p>
}

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Role Name</th>
            <th>Description</th>
            <th>Eligibility Limit (QR)</th>
            <th style="width: 220px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.RoleName</td>
                <td>@item.Description</td>
                <td>
                    @(
                                    item.RoleThreshold != null
                                    ? item.RoleThreshold.MaxAmount.ToString("N2")
                                    : "-"
                                    )
            </td>

                <td>
                @if (roleId == 1)
                    {
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.RoleId">✏ Edit</a>
                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.RoleId">🔍 Details</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.RoleId">🗑 Delete</a>
                    }
                    else
                    {
                        <a class="btn btn-sm btn-secondary" asp-action="Details" asp-route-id="@item.RoleId">🔍 View</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
