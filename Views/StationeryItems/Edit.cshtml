@model StationaryManagement1.Models.StationeryItem

@{
    ViewData["Title"] = "Edit Stationery Item";
}

<h1>Edit Stationery Item</h1>
<hr />

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="ItemId" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mb-3">
        <label asp-for="ItemName" class="form-label"></label>
        <input asp-for="ItemName" class="form-control" />
        <span asp-validation-for="ItemName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="CategoryId" class="form-label">Category</label>
        <select asp-for="CategoryId" class="form-select" asp-items="@(ViewData["CategoryId"] as SelectList)">
            <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="UnitCost" class="form-label"></label>
        <input asp-for="UnitCost" class="form-control" />
        <span asp-validation-for="UnitCost" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="CurrentStock" class="form-label"></label>
        <input asp-for="CurrentStock" class="form-control" />
        <span asp-validation-for="CurrentStock" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>Current Image</label><br />
        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <img src="~/images/@Model.ImagePath" style="height:150px; object-fit:cover;" alt="@Model.ItemName" />
        }
        else
        {
            <p>No image uploaded</p>
        }
    </div>

    <div class="form-group mb-3">
        <label>Upload New Image</label>
        <input type="file" name="ImageFile" class="form-control" />
        <small class="text-muted">Choose a new image to replace the existing one</small>
    </div>

    <div class="form-group mb-3">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
