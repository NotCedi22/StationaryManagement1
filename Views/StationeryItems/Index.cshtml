@model IEnumerable<StationaryManagement1.Models.ViewModels.StationeryItemViewModel>
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Stationery Items";

    var categories = ViewData["Categories"] as SelectList ?? new SelectList(Enumerable.Empty<SelectListItem>());
    var selectedCategoryId = Context.Request.Query["categoryId"].ToString();
    var currentUserRole = ViewBag.CurrentUserRole as string ?? "Guest";
}

<h2>Stationery Items</h2>

<form method="get" class="mb-3">
    <label>Filter by Category:</label>
    <select name="categoryId" class="form-select w-auto d-inline-block">
        <option value="" selected="@(string.IsNullOrEmpty(selectedCategoryId) ? "selected" : null)">All</option>
        @foreach (var category in categories)
        {
            <option value="@category.Value" selected="@(category.Value == selectedCategoryId ? "selected" : null)">@category.Text</option>
        }
    </select>
    <button class="btn btn-primary btn-sm">Filter</button>
</form>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var vm in Model)
    {
        var item = vm.Item;
        <div class="col">
            <div class="card h-100">
                @if (!string.IsNullOrEmpty(item?.ImagePath))
                {
                    <img src="~/images/@item.ImagePath" class="card-img-top" alt="@item.ItemName" style="height:200px; object-fit:cover;">
                }
                <div class="card-body">
                    <h5 class="card-title">@item?.ItemName</h5>
                    <p class="card-text">@item?.Description</p>
                    <p class="card-text"><strong>Category:</strong> @item?.Category?.CategoryName</p>
                    <p class="card-text mb-1"><strong>Stock:</strong> @item?.CurrentStock</p>
                    <p class="card-text mb-1"><strong>Available:</strong> @vm.AvailableStock</p>
                    <p class="card-text mb-1"><strong>Reserved:</strong> @vm.ReservedStock</p>
                    <p class="card-text"><strong>Unit Cost:</strong> $@item?.UnitCost</p>

                    <!-- Everyone can see View -->
                    <a asp-action="Details" asp-route-id="@item?.ItemId" class="btn btn-sm btn-outline-primary">View</a>

                    <!-- Only Admin sees Edit/Delete -->
                    @if (currentUserRole == "Admin")
                    {
                        <a asp-action="Edit" asp-route-id="@item?.ItemId" class="btn btn-sm btn-outline-warning ms-1">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item?.ItemId" class="btn btn-sm btn-outline-danger ms-1">Delete</a>
                    }
                </div>
            </div>
        </div>
    }
</div>
