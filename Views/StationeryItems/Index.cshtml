@model IEnumerable<StationaryManagement1.Models.ViewModels.StationeryItemViewModel>
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Stationery Items";

    var categories = ViewData["Categories"] as SelectList ?? new SelectList(Enumerable.Empty<SelectListItem>());
    var selectedCategoryId = Context.Request.Query["categoryId"].ToString();
    var currentUserRole = ViewBag.CurrentUserRole as string ?? "Guest";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">
        <i class="bi bi-box-seam me-2 text-primary"></i>Stationery Items
    </h2>
    @if (currentUserRole == "Admin")
    {
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Add New Item
        </a>
    }
</div>

<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label fw-semibold">Filter by Category:</label>
                <select name="categoryId" class="form-select">
                    <option value="" selected="@(string.IsNullOrEmpty(selectedCategoryId) ? "selected" : null)">All Categories</option>
                    @foreach (var category in categories)
                    {
                        <option value="@category.Value" selected="@(category.Value == selectedCategoryId ? "selected" : null)">@category.Text</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-funnel me-2"></i>Filter
                </button>
            </div>
        </form>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        <i class="bi bi-info-circle me-2"></i>No stationery items found.
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var vm in Model)
        {
            var item = vm.Item;
            <div class="col">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(item?.ImagePath))
                    {
                        <img src="~/images/@item.ImagePath" class="card-img-top" alt="@item.ItemName" style="height:200px; object-fit:cover;">
                    }
                    else
                    {
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height:200px;">
                            <i class="bi bi-image display-4 text-muted"></i>
                        </div>
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold">@item?.ItemName</h5>
                        <p class="card-text text-muted small">@item?.Description</p>
                        
                        <div class="mb-2">
                            <span class="badge bg-secondary">@item?.Category?.CategoryName</span>
                        </div>

                        <div class="mb-2">
                            <small class="text-muted">Total Stock:</small>
                            <strong>@item?.CurrentStock</strong>
                        </div>
                        <div class="mb-2">
                            <small class="text-muted">Available:</small>
                            <strong class="text-success">@vm.AvailableStock</strong>
                        </div>
                        <div class="mb-2">
                            <small class="text-muted">Reserved:</small>
                            <strong class="text-warning">@vm.ReservedStock</strong>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted">Unit Cost:</small>
                            <strong class="text-primary">$@item?.UnitCost.ToString("F2")</strong>
                        </div>

                        <div class="mt-auto">
                            <a asp-action="Details" asp-route-id="@item?.ItemId" class="btn btn-sm btn-outline-primary w-100 mb-2">
                                <i class="bi bi-eye me-1"></i>View Details
                            </a>

                            @if (currentUserRole == "Admin")
                            {
                                <div class="btn-group w-100" role="group">
                                    <a asp-action="Edit" asp-route-id="@item?.ItemId" class="btn btn-sm btn-outline-warning">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item?.ItemId" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
