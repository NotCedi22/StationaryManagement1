@model StationaryManagement1.Models.StationeryItem

@{
    ViewData["Title"] = "Stationery Item Details";
}

<h1>Details</h1>

<div>
    <h4>Stationery Item</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ItemName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ItemName)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Description)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category?.CategoryName</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.UnitCost)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.UnitCost)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.CurrentStock)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.CurrentStock)</dd>
    </dl>
</div>

<div>
    @* Only show Edit button if user is Admin or Manager *@
    @if (ViewBag.CurrentUserRole == "Admin" || ViewBag.CurrentUserRole == "Manager")
    {
        <a asp-action="Edit" asp-route-id="@Model.ItemId" class="btn btn-warning">Edit</a>
    }
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>